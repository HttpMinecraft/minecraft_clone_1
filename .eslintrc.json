{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns":[
    "**/-old-files/**"
  ],
  "globals":{
    "mat4": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", {"varsIgnorePattern": "^_"}]
  }
}
